{% extends 'JetBredaBundle::layoutAdmin.html.twig'%}
{% block extra %}
<link href="{{ asset('bundles/jetbreda/css/jquery.cleditor.css')}}" rel="stylesheet">
<link href="{{ asset('bundles/jetbreda/css/form_custom.css')}}" rel="stylesheet">
<script src="{{ asset('bundles/jetbreda/js/jquery.cleditor.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#jet_bredabundle_alquilertype_extra").cleditor();
    });

    $(document).ready(function () {
        $("#jet_bredabundle_alquilertype_descipcion").cleditor();
    });


</script>
{% endblock %}
{% set active = "alquiler"%}

{% block container%}
<h2>Editar registro del alquiler</h2>
<h6>{{ entity.titulo }}</h6>

<form action="{{ path('admin_alquiler_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    <div class="row">

        <div class="span3">

            {{ form_row(edit_form.tipo)}}
            {{ form_row(edit_form.titulo)}}
            {{ form_row(edit_form.superficie)}}
            {{ form_row(edit_form.destacado)}}
        </div>

        <div class="span3">
            {{ form_row(edit_form.poblacion)}}
            {{ form_row(edit_form.postal)}}
            {{ form_row(edit_form.direccion)}}
        </div>

        <div class="span5">
            {{ form_row(edit_form.extra)}}
        </div>
    </div>
<hr class="soften">

    <div class="row">

        <div class="span6">
            {{ form_row(edit_form.descipcion)}}

        </div>

        <div class="span5">
            <ul class="record_actions controlsList">

                <li>
                    <button type="submit" class="btn btn-warning" style="margin-top: 15px">Editar el registro del alquiler
                            </button>
                </li>
                <li>
                    <a href="{{ path('admin_alquiler') }}" class="btn btn-info">
                        Volver a la lista
                    </a>
                </li>


            </ul>
        </div>
    </div>
    {{ form_widget(edit_form) }}

</form>

<ul class="record_actions" style="list-style: none">
    <li>
        <form action="{{ path('admin_alquiler_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger btn-large" type="submit">Eliminar registro</button>
        </form>
    </li>
</ul>
        {% endblock %}