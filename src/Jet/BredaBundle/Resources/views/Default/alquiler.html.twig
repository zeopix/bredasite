{% extends '::base.html.twig'%}

{% set active = "alquiler"%}

{% block container%}
<div class="row" style="margin-top: 50px">
	<div class="span10 offset1">
		<h1>{{ entity.titulo }}</h1>
		<hr>
		<div class="span7">
		<h6>Descripción</h6>
		{{ entity.descipcion|raw }}<br>
		</div>
		<div class="span2">
		<h6>Detalles</h6>
		<b>Superficie:</b> {{ entity.superficie }}<br>
		<b>Población:</b> {{ entity.poblacion }}, {{ entity.postal }}<br>
		<b>Dirección:</b> {{ entity.direccion }}
		<b>Tipo:</b> {{ entity.tipo }}<br>
		{% if entity.extra is not null %}<br><br>
        <h6>Información Adicional</h6>
        {{ entity.extra|raw }}
        {% endif %}
		</div>
        <div style="clear:both"></div>
        <h3>Mapa</h3><hr class="soften">
        <div id="map_canvas" style="margin-left: 30px"></div>

	</div>
</div>




<div class="row" style="margin-top: 40px;">

    <div class="span10 offset1">
        <h3>Galería de fotos</h3><hr>
        {% if entity.fotos is not empty %}
        <div style="text-align:center">
        {% for foto in entity.fotos %}
            <div class="gallery-pic">
                <a href="#imagen{{ foto.id }}" role="button" class="btn" data-toggle="modal">
                    <img  src="{{ asset(foto.webPath) }}" title="{{ entity.poblacion }}" height="200px">
                </a>
            </div>
            <div id="imagen{{ foto.id }}" class="modal gallery hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 id="myModalLabel">Galeria: {{  foto.descripcion }}</h3>
                    </div>
                    <div class="modal-body">
                        <p><img  src="{{ asset(foto.webPath) }}" title="{{ entity.poblacion }}"></p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>

                    </div>
            </div>
        {% endfor %}

          </div>
          
        
        
        {% else %}
        <div class="alert alert-info">
            <strong>Información!</strong> No has añadido ninguna foto
        </div>
        {% endif %}
    </div>

</div>
	<br>
	<center>
	<a class="btn btn-primary" href="{{ path('alquileres') }}">Volver Atrás</a>
	</center>
<div style="padding-top: 40px;"></div>




{% endblock %}
{% block extra %}
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&language=es"></script>
        <script src="{{  asset('bundles/jetbreda/js/gmap3.min.js') }}"></script>

    <script type="text/javascript">
        $(function() {
            $("#map_canvas").width("900px").height("350px").gmap3({
                marker:{
                    address: "{{ entity.direccion }}, {{  entity.poblacion }}"
                },
                map:{
                    options:{
                        zoom: 15
                    }
                }
            });
        });
    </script>

{% endblock %}