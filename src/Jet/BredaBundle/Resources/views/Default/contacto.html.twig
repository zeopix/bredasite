{% extends '::base.html.twig'%}
{% set active = 'contacto' %}
{% block container %}
<div class="row">
<div class="span8 offset1">
{% if form is not defined %}
<form class="form-horizontal" style="margin-top: 50px">

    <fieldset>
        <legend>{% trans %}contact.todoOk.1{% endtrans %}</legend>
        <h4>{% trans %}contact.todoOk.2{% endtrans %} <a href="mailto:info@construccionesbreda.com">info@construccionesbreda.com</a>, {% trans %}contact.todoOk.3{% endtrans %}.</h4>
        <h5>{% trans %}contact.todoOk.4{% endtrans %}.</h5>
    </fieldset>
<form>
{% else %}
<form class="form-horizontal" style="margin-top: 50px" method="POST" action="{{ path('contacto') }}">

    <fieldset>
        <legend>{% trans %}Formulario de contacto{% endtrans %}</legend>
        <div class="control-group">
            <label class="control-label" for="nombre">{% trans %}contact.form.block1.title{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.persona)}}

                <p class="help-block"><i>{% trans %}contact.form.block1.helper.obligatorio{% endtrans %}</i> ({% trans %}contact.form.block1.helper2{% endtrans %})</p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="email">{% trans %}contact.form.block2.title{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.email)}}

                <p class="help-block"><i>{% trans %}contact.form.block1.helper.obligatorio{% endtrans %}</i></p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="nombre">{% trans %}contact.form.block3.title{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.telefono)}}

                <p class="help-block"><i>{% trans %}contact.form.block1.helper.obligatorio{% endtrans %}</i></p>
            </div>
        </div>


        <div class="control-group">
            <label class="control-label" for="textarea">{% trans %}contact.form.block4.title{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.consulta)}}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="check"></label>
            <div class="controls">
                <input type="checkbox" id="formCheckbox" value="true"> <span>{% trans %}contact.terms.1{% endtrans %} <a target="_blank" href="{{ asset('bundles/jetbreda/terms_of_use.pdf') }}">{% trans %}contact.terms.2{% endtrans %}</a>{% trans %}contact.terms.btw{% endtrans %}<a target="_blank" href="{{ asset('bundles/jetbreda/privacy.pdf') }}">{% trans %}contact.terms.3{% endtrans %}</a>.</span>
            </div>
        </div>
        <script>
            $(function(){
                $("#formCheckbox").click(function(){
                    if($(this).attr("checked") == "checked"){
                        $("#submitButton").removeAttr("disabled")
                    }else{
                        $("#submitButton").attr("disabled","disabled")
                    }
                });
            })
        </script>
        {{form_rest(form)}}
        <div class="form-actions">
            <button id="submitButton" type="submit" disabled="disabled" class="btn btn-primary">{% trans %}contact.form.submit{% endtrans %}</button>

        </div>
    </fieldset>
</form>
{% endif %}
</div>
<div class="span2" style="padding: 30px; padding-top: 50px">
	    		<img src="{{ asset('bundles/jetbreda/img/breda.png') }}"><br>
<b>{% trans %}contact.info.direction.title{% endtrans %}:</b>
<p class="pull-right">{%trans%}contact.info.direction.content{%endtrans%}</p>
<div style="clear:both; padding-top: 10px;"></div>
<b>{% trans %}contact.info.horary.title{% endtrans %}:</b> 
<p class="pull-right">{% trans %}contact.info.horary.content{% endtrans %}</p>
<div style="clear:both; padding-top: 10px;"></div>
<b>{% trans %}contact.info.phone.title{% endtrans %}:</b> 
<p class="pull-right">T: +34 93 218 00 40</p> 
<p class="pull-right">F: +34 93 218 00 41</p>
<div style="clear:both; padding-top: 10px;"></div>
</div>
</div>
        {% endblock%}