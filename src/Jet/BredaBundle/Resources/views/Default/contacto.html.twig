{% extends '::base.html.twig'%}
{% set active = 'contacto' %}
{% block container %}
<div class="row">
<div class="span8 offset1">
{% if form is not defined %}
<form class="form-horizontal" style="margin-top: 50px">

    <fieldset>
        <legend>{% trans %}Formulario de contacto{% endtrans %}</legend>
        <h4>{% trans %}Se ha enviado un email con tu información de contacto a{% endtrans %} <a href="mailto:info@construccionesbreda.com">info@construccionesbreda.com</a>, {% trans %}nos pondremos en contacto contigo para ofrecerte más información lo antes posible{% endtrans %}.</h4>
        <h5>{% trans %}Gracias{% endtrans %}.</h5>
    </fieldset>
<form>
{% else %}
<form class="form-horizontal" style="margin-top: 50px" method="POST" action="{{ path('contacto') }}">

    <fieldset>
        <legend>{% trans %}Formulario de contacto{% endtrans %}</legend>
        <div class="control-group">
            <label class="control-label" for="nombre">{% trans %}Persona de Contacto{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.persona)}}

                <p class="help-block"><i>{% trans %}Obligatorio{% endtrans %}</i> ({% trans %}Nombre y Apellidos{% endtrans %})</p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="email">{% trans %}Correo electrónico{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.email)}}

                <p class="help-block"><i>{% trans %}Obligatorio{% endtrans %}</i></p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="nombre">{% trans %}Teléfono de contacto{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.telefono)}}

                <p class="help-block"><i>{% trans %}Obligatorio{% endtrans %}</i></p>
            </div>
        </div>


        <div class="control-group">
            <label class="control-label" for="textarea">{% trans %}Consulta{% endtrans %}</label>

            <div class="controls">
                {{form_widget(form.consulta)}}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="check"></label>
            <div class="controls">
                <input type="checkbox" id="formCheckbox" value="true"> <span>{% trans %}He leído y acepto los{% endtrans %} <a target="_blank" href="{{ asset('bundles/jetbreda/terms_of_use.pdf') }}">{% trans %}Términos y Condiciones{% endtrans %}</a>.</span>
            </div>
        </div>
        <script>
            $(function(){
                $("#formCheckbox").click(function(){
                    if($(this).attr("checked") == "checked"){
                        $("#submitButton").removeAttr("disabled")
                    }else{
                        $("#submitButton").attr("disabled","disabled")
                    }
                });
            })
        </script>
        {{form_rest(form)}}
        <div class="form-actions">
            <button id="submitButton" type="submit" disabled="disabled" class="btn btn-primary">{% trans %}Enviar formulario{% endtrans %}</button>

        </div>
    </fieldset>
</form>
{% endif %}
</div>
<div class="span2" style="padding: 30px; padding-top: 50px">
	    		<img src="{{ asset('bundles/jetbreda/img/breda.png') }}"><br>
<b>{% trans %}Dirección{% endtrans %}:</b>
<p class="pull-right">C/ Riera Sant Miquel nº 3 s/atico 1ª</p>
<div style="clear:both; padding-top: 10px;"></div>
<b>{% trans %}Horario comercial{% endtrans %}:</b> 
<p class="pull-right">{% trans %}9:00h - 15:00h{% endtrans %}</p>
<div style="clear:both; padding-top: 10px;"></div>
<b>{% trans %}Telefono Fijo{% endtrans %}:</b> 
<p class="pull-right">+34 93 218 00 40</p>
<b>{% trans %}Fax{% endtrans %}:</b> 
<p class="pull-right">+34 93 218 00 41</p>
<div style="clear:both; padding-top: 10px;"></div>
</div>
</div>
        {% endblock%}