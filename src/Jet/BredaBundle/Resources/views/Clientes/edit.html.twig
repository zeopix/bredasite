{% extends 'JetBredaBundle::layoutAdmin.html.twig'%}

{% set active = "clientes"%}

{% block container%}
<h1>Editar cliente</h1>

<form action="{{ path('admin_clientes_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-warning">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_clientes') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <form action="{{ path('admin_clientes_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{%endblock%}